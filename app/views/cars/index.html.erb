<h1>Listing cars</h1>

<table>
  <tr>
    <th>Dealer</th>
    <th>Reference code</th>
    <th>Title</th>
    <th>Make</th>
    <th>Model</th>
    <th>Year</th>
    <th>Color</th>
    <th>Transmission</th>
    <th>Miles</th>
    <th>List price</th>
    <th>List date</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.dealer_id %></td>
    <td><%= car.reference_code %></td>
    <td><%= car.title %></td>
    <td><%= car.make %></td>
    <td><%= car.model %></td>
    <td><%= car.year %></td>
    <td><%= car.color %></td>
    <td><%= car.transmission %></td>
    <td><%= car.miles %></td>
    <td><%= car.list_price %></td>
    <td><%= car.list_date %></td>
    <td><%= car.description %></td>
    <td><%= link_to 'Show', car %></td>
    <td><%= link_to 'Edit', edit_car_path(car) %></td>
    <td><%= link_to 'Destroy', car, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

